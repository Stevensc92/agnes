{% extends 'base.html.twig' %}

{% set slider = true %}

{% block body %}
    <div class="page" id="focus">
        <div class="container">
            <span class="addEvent"><a href="{{ path('addEvent') }}" class="btn btn-primary">Nouveau</a></span>
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <td>#</td>
                    <td>Titre</td>
                    <td>Prix en €</td>
                    <td>Actif</td>
                    <td>Action</td>
                </tr>
                </thead>
                <tbody>
                {% for excursion in excursions %}
                    <tr>
                        <td>{{ excursion.id }}</td>
                        <td>{{ excursion.name }}</td>
                        <td>{{ excursion.price }} €</td>
                        <td>{{ excursion.isActiveToString }} <a href="{{ path('switchStatutEvent', {'id': 'toto'}) }}"><i class="fas fa-sync-alt"></i></a></td>
                        <td>
                            <a href="{{ path('deleteExcursion', {'id' : excursion.id}) }}" class="confirm"><i class="far fa-trash-alt"></i></a>
                            <a href="{{ path('editExcursion', {'id' : excursion.id}) }}"><i class="far fa-edit"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

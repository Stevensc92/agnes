{% extends 'base.html.twig' %}

{% set slider = true %}

{% block body %}
<div class="page" id="focus">
    <div class="container">
        <span class="addEvent"><a href="{{ path('addEvent') }}" class="btn btn-primary">Nouveau</a></span>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>Numéro d'évènement</td>
                    <td>Title</td>
                    <td>Description</td>
                    <td>Date</td>
                    <td>Actif</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.id }}</td>
                    <td>{{ event.title }}</td>
                    <td>{{ event.description }}</td>
                    <td>{{ event.start }}</td>
                    <td>{% if event.isActive is same as(true) %}Oui{% else %}Non{% endif %}</td>
                    <td>
                        <a href="{{ path('deleteEvent', {'id' : event.id}) }}" class="confirm"><i class="far fa-trash-alt"></i></a>
                        <a href="{{ path('editEvent', {'id' : event.id}) }}"><i class="far fa-edit"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        var $confirm = $('.confirm');

        $confirm.on('click', function() {
           if(!confirm('Êtes-vous sûr de vouloir supprimer l\'évènement ?'))
               return false;
        });
    </script>
{% endblock %}
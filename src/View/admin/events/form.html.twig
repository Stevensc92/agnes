<form method="{{ data.method }}" action="{{ path(data.action, {'id' : data.form.id}) }}" class="form-horizontal">
    {% if data.form %}{% set form = data.form %}{% endif %}

    {% if form %}
    <div class="control-group">
        <label for="id" class="control-label">ID</label>
        <div class="controls">
            <input type="text" name="idH" id="id" value="{{ form.id }}" disabled />
            <input type="hidden" name="id" value="{{ form.id }}" />
        </div>
    </div>
    {% endif %}

    <div class="control-group">
        <label for="id_user" class="control-label">Utilisateur</label>
        <div class="controls">
            {% if form %}
            <input type="text" name="username" id="id_user" value="{{ form.user.username }}" disabled />
            <input type="hidden" name="id_user" value="{{ form.user.id }}" />
            {% else %}
                <input type="text" name="username" id="id_user" />
            {% endif %}
        </div>
    </div>

    <div class="control-group">
        <label for="title" class="control-label">Titre</label>
        <div class="controls">
            <input type="text" name="title" id="title" value="{% if form %}{{ form.title }}{% endif %}" />
        </div>
    </div>

    <div class="control-group">
        <label for="ckeditor" class="control-label">Description</label>
        <div class="controls">
            <textarea name="description" id="ckeditor" cols="60" rows="10">{% if form %}{{ form.description }}{% endif %}</textarea>
        </div>
    </div>

    <div class="control-group">
        <label for="start" class="control-label">Date de d√©but</label>
        <div class="controls">
            <input type="date" name="start" id="start" value="{% if form %}{{ form.start }}{% endif %}" />
        </div>
    </div>

    <div class="control-group">
        <label for="end" class="control-label">Date de fin</label>
        <div class="controls">
            <input type="date" name="end" id="end" value="{% if form %}{{ form.end }}{% endif %}" />
        </div>
    </div>

    <div class="control-group">
        <div class="controls">
            <button type="submit" name="{{ data.action }}" class="btn btn-primary">{{ data.actionText }}</button>
        </div>
    </div>
</form>


{% if app.user.username is empty %}
<div id="loginModal" class="modal hide fade" tabindex="-1" role="dialog" arira-labelledby="myLoginModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 id="myLoginModal">Connexion</h3>
      </div>

      <div class="modal-body">
        <form action="{{ path('login') }}" method="post">
          <div class="form-group">
            <label for="usernameLogin">Pseudo :</label>
            <input type="text" id="usernameLogin" name="username" value="{{ last_username }}" required />
          </div>

          <div class="form-group">
            <label for="password">Mot de passe :</label>
            <input type="password" id="passwordLogin" name="password" required />
          </div>
      </div>

      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <button class="btn btn-primary" type="submit" name="login">Connexion</button>
      	</form>
      </div>
    </div>
  </div>
</div>

  <div id="signUpModal" class="modal hide fade" tabindex="-1" role="dialog" arira-labelledby="mySignUpModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h3 id="myLoginModal">Inscrivez-vous</h3>
        </div>

        <div class="modal-body">
          <form method="post" action="{{ path('signUp') }}">
            <div class="form-group">
              <label for="username">Pseudo :</label>
              <input type="text" id="usernameRegister" name="signUpUsername" value="{{ lastUsername }}" required />
            </div>

          <div class="form-group">
              <label for="password">Mot de passe :</label>
              <input type="password" id="passwordRegister" name="signUpPassword" required />
            </div>

          <div class="form-group">
            <label for="email">Adresse mail :</label>
            <input type="email" id="email" name="signUpEmail" required />
          </div>
        </div>

        <div class="modal-footer">
          <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
          <button class="btn btn-primary" type="submit" name="signUp">Inscription</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
  {% endif %}

{% extends 'base.html.twig' %}

{% set slider = true %}

{% block body %}
<div id="focus" class="page">
    <div class="container">
        <!-- Title Page -->
        <div class="row">
            <div class="span12">
                <div class="title-page">
                    <h2 class="title">Ajouter des photos</h2>
                    <h3 class="title-description">Il est possible d'ajouter plusieurs photos en m&ecirc;me temps pour une seule et m&ecirc;me catégorie.</h3>
                </div>
            </div>
        </div>
        <!-- End Title Page -->

        <!-- Contact Form -->
        <div class="row">
            <div class="span12">
                <form id="upload-form" method="post" class="contact-form" action="{{ path('uploadPicture') }}" enctype="multipart/form-data">
                    <p>
                        <input id="files" type="file" name="files[]" multiple />
                    </p>
                    <p>
                        <select name="category" id="category" required>
                            <option value="none">Sélectionner une catégorie</option>
                            {% for category in categories %}
                                <option value="{{ category.id }}">{{ category.name }}</option>
                            {% endfor %}
                        </select>
                    </p>
                    <p>
                        <button id="upload-submit" type="submit" class="submit">Upload pictures</button>
                    </p>

                    <div id="response">

                    </div>
                </form>
            </div>
        </div>
        <!-- End Contact Form -->
    </div>
</div>
<!-- End Contact Section -->
{% endblock %}
